<?xml version="1.0"?>
<odoo>
  <record id="view_form_partner_create_lead_wizard_switchboard" model="ir.ui.view">
    <field name="name">Partner Lead Create Wizard Switchboard</field>
    <field name="model">partner.create.lead.wizard</field>
    <field name="inherit_id" ref="somconnexio.view_form_partner_create_lead_wizard"/>
    <field name="arch" type="xml">
      <field name="icc" position="attributes">
        <attribute name="attrs">
                    {
                        'invisible': [
                                ('product_categ_id','not in', [
                                            %(somconnexio.mobile_service)d,
                                            %(switchboard_somconnexio.switchboard_category)d
                                    ]
                                )
                        ]
                    }
                </attribute>
      </field>
      <field name="icc" position="after">
        <field name="agent_name" string="Agent name" attrs="{                     'invisible': [('product_categ_id','!=', %(switchboard_somconnexio.switchboard_category)d)],                     'required': [('product_categ_id','=', %(switchboard_somconnexio.switchboard_category)d)]                 }"/>
        <field name="extension" string="Extension" attrs="{                     'invisible': [('product_categ_id','!=', %(switchboard_somconnexio.switchboard_category)d)],                     'required': [('product_categ_id','=', %(switchboard_somconnexio.switchboard_category)d)]                 }"/>
        <field name="agent_email" string="Agent email" attrs="{'invisible': [('product_categ_id','!=', %(switchboard_somconnexio.switchboard_category)d)]}"/>
        <field name="landline" string="CV landline" attrs="{'invisible': [('product_categ_id','!=', %(switchboard_somconnexio.switchboard_category)d)]}"/>
        <field name="landline_2" string="CV landline 2" attrs="{'invisible': [('product_categ_id','!=', %(switchboard_somconnexio.switchboard_category)d)]}"/>
      </field>
    </field>
  </record>
</odoo>
