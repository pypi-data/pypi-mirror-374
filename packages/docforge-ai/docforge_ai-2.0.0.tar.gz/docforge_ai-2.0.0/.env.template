# DocForge Configuration Template
# Copy this file to .env and configure your settings

# === REQUIRED SETTINGS ===

# OpenAI API Key (Required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# === OPTIONAL SETTINGS ===

# OpenAI Model (default: gpt-4)
OPENAI_MODEL=gpt-4

# Storage Paths
STORAGE_PATH=./storage
GENERATED_DOCS_PATH=./generated-docs

# Document Types (comma-separated list of types to enable)
# Available: project_charter,srs,high_level_design,low_level_design,test_specifications,deployment_guide,operations_manual,business_case,market_requirements,vision_brief
# ENABLED_DOCUMENT_TYPES=project_charter,srs,high_level_design,test_specifications

# Performance Settings
CONCURRENT_GENERATIONS=1
GENERATION_TIMEOUT=300
MAX_FILE_SIZE=10485760

# Features
ENABLE_VALIDATION=true
DEBUG=false
LOG_LEVEL=INFO

# === NOTION INTEGRATION (Optional) ===

# Notion API Token (for publishing to Notion)
# NOTION_TOKEN=your_notion_token_here

# Notion Database ID (for document storage)
# NOTION_DATABASE_ID=your_notion_database_id_here
