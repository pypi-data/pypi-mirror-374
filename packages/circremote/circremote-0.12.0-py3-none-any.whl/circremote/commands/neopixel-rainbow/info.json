{
  "description": "Neopixel Rainbow",
  "variables": [
    {
      "name": "neopixel_pin",
      "required": true,
      "description": "Pin Neopixel is connected to",
      "default": "board.NEOPIXEL"
    },
    {
      "name": "neopixel_count",
      "required": true,
      "description": "Number of neopixels",
      "default": 1
    },
    {
      "name": "brightness",
      "required": true,
      "description": "Brightness 0 - 1.0",
      "default": 0.1
    },
    {
      "name": "wait",
      "required": true,
      "description": "Time between cycles (in seconds)",
      "default": 0.1
    }
  ],
  "default_commandline": "neopixel_pin neopixel_count brightness wait",
  "tested": true,
  "warn_offline": false
}
