{
  "name": "qualitative-reasoning",
  "root": "packages/qualitative_reasoning", 
  "projectType": "library",
  "sourceRoot": "packages/qualitative_reasoning/qualitative_reasoning",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "python -m pip install build",
          "python -m build"
        ],
        "cwd": "packages/qualitative_reasoning"
      }
    },
    "test": {
      "executor": "nx:run-commands", 
      "options": {
        "commands": [
          "python -m pytest tests/ -v"
        ],
        "cwd": "packages/qualitative_reasoning"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "python -m ruff check .",
          "python -m black --check ."
        ],
        "cwd": "packages/qualitative_reasoning"
      }
    }
  },
  "tags": ["type:package", "scope:research", "domain:physics"]
}