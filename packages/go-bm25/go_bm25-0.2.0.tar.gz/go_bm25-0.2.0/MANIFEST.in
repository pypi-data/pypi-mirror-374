# Include README and license files
include README.md
include LICENSE
include MANIFEST.in

# Include Python source files
include *.py
recursive-include bm25 *.py

# Include Go source files (required for compilation)
include *.go
include go.mod
include go.sum

# Include build and configuration files
include Makefile
include build_package.py
include setup.py
include pyproject.toml

# Include example files
recursive-include example *.go

# Include test files
include *_test.go
include go_vs_bm25s_benchmark.py

# Include documentation
include *.md

# Include database schema
include database_schema.sql

# Include requirements
include requirements.txt

# Exclude common unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib
global-exclude temp_bench/
