{
    "_comment": "Full example .pybackup.json configuration for PyBackup_Tool.py",
    "_note": "Remove these comment fields when using - JSON doesn't support comments officially",
    
    "backup_name": "FullStack WebApp Backup",
    "source_paths": [
        "."
    ],
    "destination": "../backups/webapp",
    "filename_format": "{YYYY-MM-DD}_{project_name}_v{SrNo}_{branch}",
    "archive_format": "tar.gz",
    
    "_section_comment": "=== FILE FILTERING CONFIGURATION ===",
    
    "include_patterns": [
        "src/**/*",
        "public/**/*",
        "config/**/*",
        "docs/**/*",
        "tests/**/*",
        "scripts/**/*",
        "*.py",
        "*.js",
        "*.jsx",
        "*.ts",
        "*.tsx",
        "*.html",
        "*.css",
        "*.scss",
        "*.less",
        "*.json",
        "*.yaml",
        "*.yml",
        "*.xml",
        "*.md",
        "*.txt",
        "*.sql",
        "*.sh",
        "*.bat",
        "*.ps1",
        "requirements.txt",
        "package.json",
        "package-lock.json",
        "yarn.lock",
        "Pipfile",
        "Pipfile.lock",
        "poetry.lock",
        "pyproject.toml",
        "setup.py",
        "setup.cfg",
        "tox.ini",
        "Dockerfile",
        "docker-compose.yml",
        "docker-compose.yaml",
        ".dockerignore",
        "Makefile",
        "CMakeLists.txt",
        "README*",
        "LICENSE*",
        "CHANGELOG*",
        "CONTRIBUTING*",
        ".gitignore",
        ".gitattributes",
        ".editorconfig",
        ".eslintrc*",
        ".prettierrc*",
        "tsconfig.json",
        "jest.config.js",
        "webpack.config.js",
        "rollup.config.js",
        "vite.config.js",
        ".env.example",
        ".env.template"
    ],
    
    "exclude_patterns": [
        "_section_comment": "=== VERSION CONTROL ===",
        ".git/*",
        ".git/**/*",
        ".svn/*",
        ".hg/*",
        
        "_section_comment": "=== DEPENDENCIES & PACKAGES ===",
        "node_modules/*",
        "node_modules/**/*",
        "bower_components/*",
        "jspm_packages/*",
        "vendor/**/node_modules/*",
        "site-packages/*",
        "dist-packages/*",
        "*.egg-info/*",
        "__pycache__/*",
        "__pycache__/**/*",
        "*.pyc",
        "*.pyo",
        "*.pyd",
        ".Python",
        "pip-log.txt",
        "pip-delete-this-directory.txt",
        ".tox/*",
        ".coverage",
        ".pytest_cache/*",
        "htmlcov/*",
        ".mypy_cache/*",
        ".dmypy.json",
        "dmypy.json",
        
        "_section_comment": "=== BUILD ARTIFACTS & DIST ===",
        "build/*",
        "dist/*",
        "out/*",
        "target/*",
        "*.egg",
        "*.wheel",
        "*.deb",
        "*.rpm",
        "*.msi",
        "*.exe",
        "*.dmg",
        "*.pkg",
        "*.app",
        ".next/*",
        ".nuxt/*",
        ".vuepress/dist/*",
        ".serverless/*",
        ".fusebox/*",
        
        "_section_comment": "=== ENVIRONMENT & CONFIG ===",
        ".env",
        ".env.*",
        "!.env.example",
        "!.env.template",
        ".venv/*",
        "venv/*",
        "env/*",
        "ENV/*",
        "virtualenv/*",
        ".virtualenv/*",
        "config/secrets.yml",
        "config/database.yml",
        "config/master.key",
        "config/credentials.yml.enc",
        
        "_section_comment": "=== LOGS & TEMPORARY FILES ===",
        "*.log",
        "logs/*",
        "log/*",
        "*.tmp",
        "*.temp",
        "tmp/*",
        "temp/*",
        ".tmp/*",
        ".temp/*",
        "*.swp",
        "*.swo",
        "*~",
        ".#*",
        "#*#",
        "*.orig",
        "*.rej",
        "*.bak",
        "*.backup",
        
        "_section_comment": "=== EDITOR & IDE FILES ===",
        ".vscode/*",
        "!.vscode/settings.json",
        "!.vscode/tasks.json",
        "!.vscode/launch.json",
        "!.vscode/extensions.json",
        ".idea/*",
        "*.iml",
        "*.ipr",
        "*.iws",
        ".project",
        ".classpath",
        ".settings/*",
        "*.sublime-project",
        "*.sublime-workspace",
        ".atom/*",
        "*.code-workspace",
        
        "_section_comment": "=== OPERATING SYSTEM FILES ===",
        ".DS_Store",
        ".DS_Store?",
        "._*",
        ".Spotlight-V100",
        ".Trashes",
        "ehthumbs.db",
        "Thumbs.db",
        "desktop.ini",
        "*.lnk",
        
        "_section_comment": "=== DATABASES & CACHE ===",
        "*.sqlite",
        "*.sqlite3",
        "*.db",
        ".sass-cache/*",
        ".cache/*",
        "cache/*",
        ".parcel-cache/*",
        ".webpack-cache/*",
        
        "_section_comment": "=== MEDIA & LARGE FILES ===",
        "*.mp4",
        "*.avi",
        "*.mkv",
        "*.mov",
        "*.wmv",
        "*.flv",
        "*.webm",
        "*.mp3",
        "*.wav",
        "*.flac",
        "*.aac",
        "*.ogg",
        "*.iso",
        "*.dmg",
        "*.img",
        "*.bin",
        "*.zip",
        "*.rar",
        "*.7z",
        "*.tar.gz",
        "*.tar.bz2",
        "uploads/**/videos/*",
        "uploads/**/audio/*",
        "public/uploads/large/*",
        
        "_section_comment": "=== TEST & COVERAGE FILES ===",
        "coverage/*",
        ".nyc_output/*",
        "test-results/*",
        "junit.xml",
        "*.lcov",
        ".coverage.*",
        "coverage.xml",
        "*.cover",
        
        "_section_comment": "=== DOCUMENTATION BUILDS ===",
        "_build/*",
        "_site/*",
        "site/*",
        ".jekyll-cache/*",
        ".jekyll-metadata",
        
        "_section_comment": "=== SECURITY & CERTIFICATES ===",
        "*.pem",
        "*.key",
        "*.crt",
        "*.cer",
        "*.p12",
        "*.pfx",
        "id_rsa",
        "id_dsa",
        "id_ecdsa",
        "id_ed25519",
        ".ssh/*",
        
        "_section_comment": "=== BACKUP RELATED ===",
        "backups/*",
        "backup/*",
        "*.backup",
        ".pybackup.json",
        "backups_metadata.json",
        
        "_section_comment": "=== CLOUD & DEPLOYMENT ===",
        ".terraform/*",
        "*.tfstate",
        "*.tfstate.backup",
        ".terraform.lock.hcl",
        ".serverless_nextjs/*",
        ".vercel/*",
        ".netlify/*",
        
        "_section_comment": "=== MISCELLANEOUS ===",
        "*.pid",
        "*.seed",
        "*.pid.lock",
        ".grunt/*",
        ".lock-wscript",
        ".wafpickle-*",
        ".eslintcache",
        ".stylelintcache",
        "npm-debug.log*",
        "yarn-debug.log*",
        "yarn-error.log*",
        "lerna-debug.log*"
    ],
    
    "_section_comment": "=== COMPRESSION & PERFORMANCE ===",
    
    "compression_level": 6,
    "generate_checksums": true,
    
    "_section_comment": "=== AUTOMATIC CLEANUP POLICIES ===",
    
    "auto_cleanup": {
        "enabled": true,
        "max_backups": 20,
        "max_age_days": 90
    },
    
    "_section_comment": "=== SUMMARY CONFIGURATION ===",
    
    "summary": {
        "auto_generate": false,
        "default_summary": "Full-stack web application backup - {project_name} ({branch} branch) - {YYYY-MM-DD}"
    },
    
    "_section_comment": "=== GIT INTEGRATION (Future Enhancement) ===",
    
    "git_integration": {
        "include_branch_in_filename": true,
        "exclude_if_uncommitted_changes": false,
        "include_commit_hash": false,
        "tag_based_naming": false
    },
    
    "_section_comment": "=== NOTIFICATION SETTINGS (Future Enhancement) ===",
    
    "notifications": {
        "on_success": false,
        "on_failure": true,
        "email": "",
        "webhook_url": "",
        "slack_channel": ""
    },
    
    "_section_comment": "=== ADVANCED FILTERING (Future Enhancement) ===",
    
    "advanced_filtering": {
        "max_file_size": "100MB",
        "min_file_size": "1B",
        "max_total_size": "5GB",
        "exclude_empty_directories": true,
        "follow_symlinks": false,
        "include_hidden_files": true,
        "case_sensitive_patterns": false
    },
    
    "_section_comment": "=== BACKUP VALIDATION ===",
    
    "validation": {
        "verify_after_creation": true,
        "test_restore_sample": false,
        "checksum_algorithm": "sha256",
        "integrity_check_interval": "weekly"
    },
    
    "_section_comment": "=== METADATA ENHANCEMENT ===",
    
    "metadata": {
        "include_file_permissions": true,
        "include_timestamps": true,
        "include_owner_info": false,
        "custom_tags": [
            "production",
            "web-app",
            "fullstack"
        ],
        "project_info": {
            "name": "My Web Application",
            "version": "2.1.0",
            "description": "A full-stack web application with React frontend and Python backend",
            "tech_stack": ["React", "TypeScript", "Python", "FastAPI", "PostgreSQL"],
            "team": "Development Team Alpha"
        }
    }
}