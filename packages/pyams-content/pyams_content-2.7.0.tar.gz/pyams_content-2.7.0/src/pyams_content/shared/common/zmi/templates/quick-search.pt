<fieldset class="border position-relative"
		  i18n:domain="pyams_content">
	<legend i18n:translate="">SEARCH - <tal:var i18n:name="legend" content="view.legend">view.legend</tal:var></legend>
	<form class="ams-form d-flex flex-row align-items-center"
		  method="post"
		  data-async action="quick-search.json"
		  data-ams-form-submit-target="#quick_search_results">
		<div class="input-group col col-md-6 px-0">
			<input type="text" required
				   class="form-control"
				   name="query"
				   placeholder="Search..." i18n:attributes="placeholder" />
			<button type="submit"
					class="input-group-append input-group-text">
				<i class="fas fa-fw fa-search"></i>
			</button>
		</div>
		<div class="input-group col col-md-6">
			<a href="#advanced-search.html"
			   i18n:translate="">Advanced search...</a>
		</div>
	</form>
	<div id="quick_search_results"></div>
</fieldset>