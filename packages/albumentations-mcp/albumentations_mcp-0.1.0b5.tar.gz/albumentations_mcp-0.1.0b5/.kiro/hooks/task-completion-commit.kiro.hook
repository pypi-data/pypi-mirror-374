{
  "enabled": true,
  "name": "Task Completion Git Commit",
  "description": "Generate git commit messages for completed tasks",
  "version": "3",
  "when": [
    {
      "type": "fileSaved",
      "patterns": [".kiro/specs/*/tasks.md"]
    },
    {
      "type": "manual"
    }
  ],
  "then": {
    "type": "askAgent",
    "prompt": "📝 COMMIT MESSAGE: A task has been completed. Generate a conventional commit message (feat:, fix:, docs:, etc.) that describes what was accomplished, mentions specific components modified, and explains the impact. Keep subject under 50 characters."
  }
}
