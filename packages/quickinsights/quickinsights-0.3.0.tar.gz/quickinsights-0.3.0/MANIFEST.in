# Include documentation files
include README.md
include LICENSE
include CONTRIBUTING.md
include SECURITY.md
include FUTURE_ROADMAP.md
include OPTIMIZATION_ROADMAP.md
include OPTIMIZATION_SUMMARY.md
include RELEASE_NOTES_v0.3.0.md

# Include configuration files
include pyproject.toml
include requirements.txt
include pytest.ini
include pyrightconfig.json

# Include documentation directory
recursive-include docs *.md

# Include examples directory
recursive-include examples *.py

# Include source code
recursive-include src *.py

# Exclude unnecessary files
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
exclude .git*
exclude .DS_Store
exclude *.egg-info
exclude .pytest_cache
exclude .coverage
exclude .mypy_cache
exclude .tox
exclude .venv
exclude venv
exclude env
exclude build
exclude dist

# Exclude test files from distribution
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * .pytest_cache
recursive-exclude * .coverage
