<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="schema_parser_category_view_search" model="ir.ui.view">
        <field name="name">schema_parser_category - search</field>
        <field name="model">schema_parser_category</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>
    <record id="schema_parser_category_view_tree" model="ir.ui.view">
        <field name="name">schema_parser_category - tree</field>
        <field name="model">schema_parser_category</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                </xpath>
            </data>
        </field>
    </record>
    <record id="schema_parser_category_view_form" model="ir.ui.view">
        <field name="name">schema_parser_category - form</field>
        <field name="model">schema_parser_category</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="after">
                </xpath>
            </data>
        </field>
    </record>
    <record id="schema_parser_category_action" model="ir.actions.act_window">
        <field name="name">Schema Parser Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schema_parser_category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="schema_parser_category_menu"
        name="Categories"
        parent="ssi_schema_parser_menu_root"
        action="ssi_schema_parser_mixin.schema_parser_category_action"
        groups="base.group_system"
        sequence="20"
    />
</odoo>
