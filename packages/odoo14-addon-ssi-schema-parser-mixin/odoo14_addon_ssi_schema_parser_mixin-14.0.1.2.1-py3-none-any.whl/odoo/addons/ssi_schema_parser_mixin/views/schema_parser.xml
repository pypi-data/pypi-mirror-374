<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="schema_parser_view_search" model="ir.ui.view">
        <field name="name">schema_parser - search</field>
        <field name="model">schema_parser</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>
    <record id="schema_parser_view_tree" model="ir.ui.view">
        <field name="name">schema_parser - tree</field>
        <field name="model">schema_parser</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                </xpath>
            </data>
        </field>
    </record>
    <record id="schema_parser_view_form" model="ir.ui.view">
        <field name="name">schema_parser - form</field>
        <field name="model">schema_parser</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="after">
                    <field name="category_id" />
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page name="schema" string="Schema">
                        <field name="schema" widget="ace" />
                        <separator string="Validation" />
                        <group name="schema_1" colspan="4" col="2">
                            <field name="schema_valid" string="Valid?" />
                            <field name="schema_error" string="Error Message" />
                        </group>
                    </page>
                    <page name="parser" string="Parser">
                        <field name="parser" widget="ace" />
                    </page>
                    <page name="documentation" string="Documentation">
                        <field name="documentation" widget="ace" />
                    </page>
                    <page name="example" string="Example">
                        <separator string="Schema" />
                        <field name="schema_example" widget="ace" />
                        <separator string="Schema Validation" />
                        <group name="example_1" colspan="4" col="2">
                            <field name="example_is_valid" string="Valid?" />
                            <field
                                name="example_error_message"
                                string="Error Message"
                            />
                        </group>
                        <separator string="Result" />
                        <field name="result_example" widget="ace" />
                        <separator string="Validation" />
                        <group name="exmaple_2" colspan="4" col="2">
                            <field name="result_example_is_valid" string="Valid?" />
                            <field
                                name="result_example_error_message"
                                string="Error Message"
                            />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
    <record id="schema_parser_action" model="ir.actions.act_window">
        <field name="name">Schema Parsers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schema_parser</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="schema_parser_menu"
        name="Parsers"
        parent="ssi_schema_parser_menu_root"
        action="ssi_schema_parser_mixin.schema_parser_action"
        groups="base.group_system"
        sequence="30"
    />
</odoo>
