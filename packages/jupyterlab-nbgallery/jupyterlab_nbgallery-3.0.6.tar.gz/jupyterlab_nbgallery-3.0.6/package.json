{
  "name": "@jupyterlab-nbgallery/all",
  "private": true,
  "scripts": {
    "bootstrap": "jlpm && jlpm run clean-ext && jlpm run build-ext && jlpm run lint && jlpm run prepare",
    "build-jlab": "jupyter lab build --debug",
    "build-ext": "lerna run build:all",
    "clean-ext": "lerna run clean:all",
    "embedme": "embedme \"[!n]*/**/README.md\"",
    "install-ext": "lerna run install-ext",
    "lint": "jlpm && jlpm run prettier",
    "lint:check": "jlpm run embedme --verify && jlpm run prettier:check",
    "prettier": "prettier --write \"**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}\"",
    "prettier:check": "prettier --list-different \"**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}\"",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "autodownload",
    "environment-life",
    "environment-registration",
    "gallerymenu",
    "inject-uuid",
    "instrumentation",
    "userpreferences"
  ],
  "devDependencies": {
    "embedme": "^1.22.1",
    "husky": "^9.1.7",
    "lerna": "8.2.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "resolutions": {
    "cross-spawn": "7.0.6"
  }
}
