<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25" />
        <field
            name="inherit_id"
            ref="purchase.res_config_settings_view_form_purchase"
        />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='purchase']" position="inside">
                <block
                    title="Work Acceptance"
                    name="purchase_work_acceptance_setting_container"
                >
                    <setting
                        id="enable_wa_on_po"
                        title="Enable to use work acceptance on purchase order."
                        help="Enable work acceptance on purchase order"
                    >
                        <field name="group_enable_wa_on_po" class="o_light_label" />
                        <div
                            class="content-group"
                            invisible="not group_enable_wa_on_po"
                        >
                            <!-- Enable/Enforce WA on Goods Receipt -->
                            <div class="row mt8">
                                <field name="group_enable_wa_on_in" class="oe_inline" />
                                <label
                                    for="group_enable_wa_on_in"
                                    class="col-9 col-lg-9 o_light_label"
                                />
                            </div>
                            <div
                                class="row mt8 ml32"
                                invisible="not group_enable_wa_on_in"
                            >
                                <field
                                    name="group_enforce_wa_on_in"
                                    class="oe_inline"
                                />
                                <label
                                    for="group_enforce_wa_on_in"
                                    class="col-9 col-lg-9 o_light_label"
                                />
                            </div>
                            <!-- Enable/Enforce WA on Vendor Bill -->
                            <div class="row mt8">
                                <field
                                    name="group_enable_wa_on_invoice"
                                    class="oe_inline"
                                />
                                <label
                                    for="group_enable_wa_on_invoice"
                                    class="col-9 col-lg-9 o_light_label"
                                />
                            </div>
                            <div
                                class="row mt8 ml32"
                                invisible="not group_enable_wa_on_invoice"
                            >
                                <field
                                    name="group_enforce_wa_on_invoice"
                                    class="oe_inline"
                                />
                                <label
                                    for="group_enforce_wa_on_invoice"
                                    class="col-9 col-lg-9 o_light_label"
                                />
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
