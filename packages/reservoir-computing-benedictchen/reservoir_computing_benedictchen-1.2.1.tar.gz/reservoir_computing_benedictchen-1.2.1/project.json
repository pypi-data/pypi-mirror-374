{
  "name": "reservoir-computing",
  "root": "packages/reservoir_computing", 
  "projectType": "library",
  "sourceRoot": "packages/reservoir_computing/reservoir_computing",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "python -m pip install build",
          "python -m build"
        ],
        "cwd": "packages/reservoir_computing"
      }
    },
    "test": {
      "executor": "nx:run-commands", 
      "options": {
        "commands": [
          "python -m pytest tests/ -v"
        ],
        "cwd": "packages/reservoir_computing"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "python -m ruff check .",
          "python -m black --check ."
        ],
        "cwd": "packages/reservoir_computing"
      }
    }
  },
  "tags": ["type:package", "scope:research", "domain:neuromorphic"]
}