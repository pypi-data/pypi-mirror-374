<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="agreement_legal.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='agreement_legal']" position="inside">
                <block title="Sign Oca" name="agreement_sign_oca_settings_container">
                    <setting>
                        <field name="agreement_sign_oca_template_id" />
                    </setting>
                    <setting>
                        <field name="agreement_sign_oca_signed_stage_id" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
