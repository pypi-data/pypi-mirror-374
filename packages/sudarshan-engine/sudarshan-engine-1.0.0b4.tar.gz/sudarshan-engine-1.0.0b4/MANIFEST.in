include README.md
include LICENSE
include CHANGELOG.md
include SECURITY.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md

# Documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Examples
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.txt

# Tests
recursive-include tests *.py
recursive-include tests *.txt
recursive-include tests *.md

# Security
recursive-include security *.py
recursive-include security *.md

# Bindings
recursive-include bindings *.py

# Desktop GUI
recursive-include desktop_gui *.html
recursive-include desktop_gui *.css
recursive-include desktop_gui *.js
recursive-include desktop_gui *.json

# Web Interface
recursive-include web_interface *.html
recursive-include web_interface *.css
recursive-include web_interface *.js
recursive-include web_interface *.py
recursive-include web_interface *.md

# Static files
recursive-include sudarshan/static *
recursive-include sudarshan/templates *

# Data files
include sudarshan/data/*
include packaging/*

# Scripts
include scripts/*
