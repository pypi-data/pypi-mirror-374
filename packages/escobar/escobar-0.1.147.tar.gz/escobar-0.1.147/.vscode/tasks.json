{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: build - tsconfig.json"
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "label": "npm: watch"
    },
    {
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/jupyter lab --watch",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "label": "jupyter: lab watch",
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      }
    },
    {
      "label": "Start Development Environment",
      "dependsOrder": "parallel",
      "dependsOn": [
        "npm: watch",
        "jupyter: lab watch"
      ],
      "problemMatcher": []
    }
  ]
}
