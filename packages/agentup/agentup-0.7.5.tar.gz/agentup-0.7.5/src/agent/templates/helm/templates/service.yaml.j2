apiVersion: v1
kind: Service
metadata:
  name: {{ "{{" }} include "{{ project_name_snake }}.fullname" . {{ "}}" }}
  labels:
    {{ "{{-" }} include "{{ project_name_snake }}.labels" . | nindent 4 {{ "}}" }}
spec:
  type: {{ "{{" }} .Values.service.type {{ "}}" }}
  ports:
    - port: {{ "{{" }} .Values.service.port {{ "}}" }}
      targetPort: http
      protocol: TCP
      name: http
  selector:
    {{ "{{-" }} include "{{ project_name_snake }}.selectorLabels" . | nindent 4 {{ "}}" }}
