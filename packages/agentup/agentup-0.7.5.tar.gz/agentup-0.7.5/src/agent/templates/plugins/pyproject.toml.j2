[project]
name = "{{ plugin_name }}"
version = "{{ version | default('0.0.1') }}"
description = "{{ description }}"
requires-python = ">=3.11"
authors = [
    { name = "{{ author or 'Your Name' }}"{% if email %}, email = "{{ email }}"{% endif %} }
]
dependencies = [
    "agentup>={{ agentup_version }}",
]

classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: Apache Software License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]

[project.entry-points."agentup.plugins"]
{{ plugin_name_snake }} = "{{ plugin_name_snake }}.plugin:{{ class_name }}"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ plugin_name_snake }}"]

# This file is needed to transfer the image logo files to the AgentUp registry
[tool.hatch.build.targets.wheel.force-include]
"static" = "static"

[tool.pytest.ini_options]
asyncio_mode = "auto"

[tool.uv]
extra-index-url = ["https://api.agentup.dev/simple"]
