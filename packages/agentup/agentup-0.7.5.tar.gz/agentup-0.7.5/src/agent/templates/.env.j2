# Environment Variables for AgentUp Agent

# OpenAI API Key (if using OpenAI provider)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Anthropic provider)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Base URL (if using Ollama provider)
# OLLAMA_BASE_URL=http://localhost:11434

# Valkey/Redis URL (if using Valkey services)
# VALKEY_URL=valkey://localhost:6379

{% if auth_type == 'oauth2' %}
# OAuth2 Authentication Configuration
{% if oauth2_provider == 'github' %}
# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# GITHUB_REDIRECT_URI=http://localhost:8000/auth/callback
{% elif oauth2_provider == 'google' %}
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback
{% elif oauth2_provider == 'keycloak' %}
# Keycloak OAuth2
KEYCLOAK_CLIENT_ID=your_keycloak_client_id
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret
KEYCLOAK_BASE_URL=https://your-keycloak.com/auth
KEYCLOAK_REALM=your-realm
# KEYCLOAK_REDIRECT_URI=http://localhost:8000/auth/callback
{% else %}
# Generic OAuth2
OAUTH2_CLIENT_ID=your_client_id
OAUTH2_CLIENT_SECRET=your_client_secret
OAUTH2_AUTHORIZATION_URL=https://your-provider.com/oauth/authorize
OAUTH2_TOKEN_URL=https://your-provider.com/oauth/token
# OAUTH2_REDIRECT_URI=http://localhost:8000/auth/callback
OAUTH2_JWKS_URL=https://your-provider.com/.well-known/jwks.json
OAUTH2_JWT_ISSUER=https://your-provider.com
OAUTH2_JWT_AUDIENCE={{ project_name_snake }}
{% endif %}
{% endif %}