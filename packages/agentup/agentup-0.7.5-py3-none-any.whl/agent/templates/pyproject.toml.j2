[project]
name = "{{ project_name_snake }}"
version = "{{ version | default('0.0.1') }}"
description = "{{ description }}"
readme = "README.md"
requires-python = ">=3.11"
authors = [
    { name = "{{ author_info.name | default("Your name") }}", email = "{{ author_info.email | default("email") }}" },
]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]
dependencies = [
    "agentup>={{ agentup_version }}",  # AgentUp framework - provides all core functionality
]

[tool.uv]
extra-index-url = ["https://api.agentup.dev/simple"]
