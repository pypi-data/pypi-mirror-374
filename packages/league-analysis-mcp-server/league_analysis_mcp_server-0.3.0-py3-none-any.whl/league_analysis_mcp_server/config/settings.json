{
  "server": {
    "name": "league-analysis-mcp",
    "version": "0.3.0",
    "description": "MCP server for Yahoo Fantasy Sports analysis with historical data support"
  },
  "default_league": {
    "league_id": null,
    "game_code": "nfl",
    "season": "current"
  },
  "supported_sports": [
    "nfl",
    "nba",
    "mlb",
    "nhl"
  ],
  "features": {
    "historical_analysis": true,
    "manager_profiling": true,
    "trade_predictions": true,
    "draft_analysis": true,
    "caching": true
  },
  "cache_settings": {
    "historical_data_ttl": -1,
    "current_data_ttl": 300,
    "max_cache_size_mb": 100
  },
  "rate_limiting": {
    "requests_per_minute": 60,
    "burst_limit": 10
  },
  "analytics": {
    "min_seasons_for_analysis": 2,
    "include_current_season": true,
    "confidence_threshold": 0.7
  }
}