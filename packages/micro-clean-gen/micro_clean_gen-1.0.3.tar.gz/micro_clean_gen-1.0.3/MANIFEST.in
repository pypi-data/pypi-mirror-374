# 包含README和LICENSE文件
include README.md
include LICENSE
include VERSION
include requirements.txt

# 包含所有模板文件
recursive-include micro_gen/templates *.tmpl
recursive-include micro_gen/core/templates *.tmpl
recursive-include micro_gen/examples *.yaml *.yml

# 包含配置文件
recursive-include configs *.yaml *.yml
recursive-include examples *.yaml *.yml

# 排除不需要的文件
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.log
global-exclude .env

# 排除测试文件
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]