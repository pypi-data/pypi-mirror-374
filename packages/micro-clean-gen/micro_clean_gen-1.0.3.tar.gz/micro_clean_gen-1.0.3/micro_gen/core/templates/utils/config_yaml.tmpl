server:
  port: 8080
  grpc_port: 50051
  mode: debug
  timeout: 30s

database:
  host: localhost
  port: 5432
  user: postgres
  password: postgres
  dbname: {{project_name}}
  sslmode: disable
  max_open_conns: 25
  max_idle_conns: 25
  conn_max_lifetime: 5m

nats:
  url: nats://localhost:4222
  cluster_id: test-cluster
  client_id: {{project_name}}-client
  durable_name: {{project_name}}-durable

logging:
  level: info
  format: json
  output: stdout

monitoring:
  enabled: true
  port: 9090
  path: /metrics

health:
  port: 8081
  path: /health

features:
  event_sourcing: true
  projections: true
  snapshots: true
  metrics: true