{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/output/v1/AuditResult.json",
  "title": "AuditSummary",
  "type": "object",
  "properties": {
    "auditedFiles": { "type": "integer", "minimum": 0 },
    "auditedContracts": { "type": "integer", "minimum": 0 },
    "vulnerabilityCount": {
      "type": "object",
      "properties": {
        "high": { "type": "integer", "minimum": 0 },
        "medium": { "type": "integer", "minimum": 0 },
        "low": { "type": "integer", "minimum": 0 },
        "informational": { "type": "integer", "minimum": 0 },
        "optimization": { "type": "integer", "minimum": 0 }
      },
      "required": ["high", "medium", "low", "informational", "optimization"],
      "additionalProperties": false
    },
    "totalLines": { "type": "integer", "minimum": 0 },
    "securityScore": { "type": "number", "minimum": 0, "maximum": 100 }
  },
  "required": [
    "auditedFiles",
    "auditedContracts",
    "vulnerabilityCount",
    "totalLines",
    "securityScore"
  ],
  "additionalProperties": true
}


