{
    "summary": "Short context simple connection conversations",
    "setups": [
        {
            "summary": "Chris just bought a trampoline and John bought a fridge",
            "prior_conversations": [
                [{
                    "role": "user",
                    "content": "Chris just bought a trampoline and John bought a fridge."
                },
                {
                    "role": "assistant",
                    "content": "Wow, I'm so happy for them."
                },
                {
                    "role": "user",
                    "content": "Same, the fridge is a nice white colour."
                }]
            ]
        },
        {
            "summary": "Fred heard Chris bought a trampoline.",
            "prior_conversations": [
                [{
                    "role": "user",
                    "content": "OMG Fred! Did you hear?"
                },
                {
                    "role": "assistant",
                    "content": "Did I hear what?"
                },
                {
                    "role": "user",
                    "content": "About the trampoline! Chris just bought one"
                },
                {
                    "role": "assistant",
                    "content": "That sounds like a lot of fun! Did you know John bought a fridge? It's less fun, but it's a nice white colour."
                }]
            ]
        },{
            "summary": "Uncle Chris bought a trampoline.",
            "prior_conversations": [
                [{
                    "role": "user",
                    "content": "My uncles name is Chris. He just bought a trampoline. Last week his son John bought a white fridge"
                }]
            ]
        },{
            "summary": "Chris bought a trampoline, not John.",
            "prior_conversations": [
                [{
                    "role": "user",
                    "content": "John just bought a trampoline."
                }],
                
                [{
                    "role": "user",
                    "content": "Do you remember who bought a trampoline"
                },{
                    "role": "assistant",
                    "content": "Yes, it was John"
                },
                {
                    "role": "user",
                    "content": "Ah, my bad, it was actually Chris. John got a fridge, it's white."
                }]
            ]
        }
    ], 
    "tests" : [
        {
            "summary": "Who bought a trampoline?",
            "messages": [{
                    "role": "system",
                    "content": "Answer with one word **only**. Who bought a trampoline?"
                }],
            "expected_response": "Chris"
        },
        {
            "summary": "What did Chris just buy?",
            "messages": [{
                    "role": "system",
                    "content": "Answer with one word **only**. What did Chris just buy?"
                }],
            "expected_response": "trampoline"
        },
        {
            "summary": "What did John buy?",
            "messages": [{
                    "role": "system",
                    "content": "Answer with one word **only**. What did John just buy?"
                }],
            "expected_response": "fridge"
        }
    ]
}