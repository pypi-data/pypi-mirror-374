<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="purchase_container_view_form" model="ir.ui.view">
        <field name="model">purchase.container</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_view_rfq"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-shopping-cart"
                            invisible="purchase_order_rfq_count == 0"
                        >
                            <field
                                name="purchase_order_rfq_count"
                                widget="statinfo"
                                string="RFQ"
                            />
                        </button>
                        <button
                            name="action_view_order"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-credit-card"
                            invisible="purchase_order_count == 0"
                        >
                            <field
                                name="purchase_order_count"
                                widget="statinfo"
                                string="Purchases"
                            />
                        </button>
                        <button
                            name="action_view_picking"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="picking_count == 0"
                        >
                            <field
                                name="picking_count"
                                widget="statinfo"
                                string="Transfers"
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        Container
                        <h1>
                        <field name="name" />
                    </h1>
                    </div>
                    <group>
                        <group name="references">
                            <field name="code" placeholder="Container Reference" />
                            <field name="bill_of_lading_ref" />
                            <field name="shipping_agent_id" />
                        </group>
                        <group name="metrics">
                            <field name="type_id" />
                            <field name="package_qty" />
                            <label for="weight" />
                            <div class="o_row" name="weight">
                                <field name="weight" />
                                <field
                                    name="weight_uom_id"
                                    options="{'no_open': True, 'no_create': True}"
                                />
                            </div>
                            <label for="volume" />
                            <div class="o_row" name="volume">
                                <field name="volume" string="Volume" />
                                <field
                                    name="volume_uom_id"
                                    options="{'no_open': True, 'no_create': True}"
                                />
                            </div>
                        </group>
                        <group name="financials">
                            <label for="cost" />
                            <div class="o_row" name="container_cost">
                                <field name="cost" />
                                <field
                                    name="cost_currency_id"
                                    options="{'no_open': True, 'no_create': True}"
                                />
                            </div>
                        </group>
                    </group>
                    <group>
                        <separator string="Receipts" colspan="4" />
                        <field
                            name="picking_ids"
                            colspan="4"
                            nolabel="1"
                            widget="many2many"
                            context="{'search_default_draft': 1, 'search_default_waiting': 1, 'search_default_available': 1}"
                        />
                    </group>
                    <group>
                        <separator string="Purchase Orders" colspan="4" />
                        <field
                            name="purchase_order_ids"
                            colspan="4"
                            nolabel="1"
                            readonly="picking_ids"
                        />
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="purchase_container_view_list" model="ir.ui.view">
        <field name="model">purchase.container</field>
        <field name="arch" type="xml">
            <list>
                <field name="code" />
                <field name="type_id" />
                <field name="bill_of_lading_ref" />
                <field name="shipping_agent_id" />
                <field name="picking_ids" widget="many2many_tags" />
                <field name="purchase_order_ids" widget="many2many_tags" />
            </list>
        </field>
    </record>

    <record id="purchase_container_view_search" model="ir.ui.view">
        <field name="model">purchase.container</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" />
                <field name="picking_ids" />
                <field name="purchase_order_ids" />
                <field name="bill_of_lading_ref" />
                <group expand="0" name="group_by" string="Group By">
                    <filter
                        name="shipping_agent_id"
                        string="Shipping Agent"
                        domain="[]"
                        context="{'group_by' : 'shipping_agent_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="purchase_container_action" model="ir.actions.act_window">
        <field name="name">Containers</field>
        <field name="res_model">purchase.container</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_procurement_management_container"
        parent="purchase.menu_procurement_management"
        action="purchase_container_action"
    />
</odoo>
