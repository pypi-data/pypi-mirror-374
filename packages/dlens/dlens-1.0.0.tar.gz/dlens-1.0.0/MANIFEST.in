include README.md
include LICENSE
include MANIFEST.in
include requirements.txt
include requirements-dev.txt

# Include all resource files
recursive-include dlens/resources *.json
recursive-include dlens/resources/templates *.html

# Include test files
recursive-include tests *.py

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
prune .git
prune __pycache__
prune *.egg-info
prune dist
prune build
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude *.log