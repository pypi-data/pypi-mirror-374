<xs:schema
  xmlns:sp="urn:spacePacket"
  xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns="http://www.esa.int/safe/sentinel-1.0/"
  targetNamespace="http://www.esa.int/safe/sentinel-1.0/">
  <xs:import namespace="urn:spacePacket" schemaLocation="SpacePacketFormat.dfdl.xsd"/>
  <xs:annotation>
    <xs:appinfo source="http://www.ogf.org/dfdl/">
      <dfdl:format ref="sp:SpacePacketFormat"/>
    </xs:appinfo>
    <xs:documentation>
        <fixedSizeSchema>128</fixedSizeSchema>
    </xs:documentation>
  </xs:annotation>
  <xs:element name="ancillary" type="ancillaryType"/>
  <xs:complexType name="ancillaryType">
    <xs:sequence>
      <xs:element name="POS_X" type="sp:float64"/>
      <xs:element name="POS_Y" type="sp:float64"/>
      <xs:element name="POS_Z" type="sp:float64"/>
      <xs:element name="VEL_X" type="sp:float32"/>
      <xs:element name="VEL_Y" type="sp:float32"/>
      <xs:element name="VEL_Z" type="sp:float32"/>
      <xs:element name="_padding1" type="sp:bit8" dfdl:length="8"/>
      <xs:element name="PVT_GPS_TIME" type="sp:cucTime"/>
      <xs:element name="ATT_Q0" type="sp:float32"/>
      <xs:element name="ATT_Q1" type="sp:float32"/>
      <xs:element name="ATT_Q2" type="sp:float32"/>
      <xs:element name="ATT_Q3" type="sp:float32"/>
      <xs:element name="SC_RATE_WX" type="sp:float32"/>
      <xs:element name="SC_RATE_WY" type="sp:float32"/>
      <xs:element name="SC_RATE_WZ" type="sp:float32"/>
      <xs:element name="_padding2" type="sp:bit8" dfdl:length="8"/>
      <xs:element name="ATT_GPS_TIME" type="sp:cucTime"/>
      <xs:element name="pointingStatus" type="pointingStatusType"/>
      <xs:element name="temperatureStatus" type="temperatureHKUpdateStatusType"/>
      <xs:element name="temperatureTile" type="temperatureTileType" minOccurs="14" maxOccurs="14"
                  dfdl:occursCountKind="fixed"/>
      <xs:element name="_padding3" type="sp:bit16" dfdl:length="9"/>
      <xs:element name="temperatureTGU" type="sp:bit8" dfdl:length="7"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="pointingStatusType">
    <xs:sequence>
      <xs:element name="AOCS_OP_MODE" type="sp:bit8" dfdl:length="8"/>
      <xs:element name="_padding" type="sp:bit8" dfdl:length="5"/>
      <xs:element name="RE" type="sp:bit8" dfdl:length="1"/>
      <xs:element name="PE" type="sp:bit8" dfdl:length="1"/>
      <xs:element name="YE" type="sp:bit8" dfdl:length="1"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="temperatureHKUpdateStatusType">
    <xs:sequence>
      <xs:element name="_padding" type="sp:bit8" dfdl:length="1"/>
      <xs:element name="TGU" type="sp:bit8" dfdl:length="1"/>
      <xs:element name="Tile" type="sp:bit8" dfdl:length="1" minOccurs="14" maxOccurs="14"
                  dfdl:occursCountKind="fixed"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="temperatureTileType">
    <xs:sequence>
      <xs:element name="EFE_H" type="sp:uint8"/>
      <xs:element name="EFE_V" type="sp:uint8"/>
      <xs:element name="ACTIVE_TA" type="sp:uint8"/>
    </xs:sequence>
  </xs:complexType>
  <!-- === End of packet definition === -->
</xs:schema>
