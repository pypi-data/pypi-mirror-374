<div class="d-flex flex-nowrap align-items-center"
	 tal:define="js tales:resource_path('pyams_app_msc.zmi:msc')"
	 data-ams-modules='{
		"msc": {
			"src": "${js}"
		}
	 }'
	 i18n:domain="pyams_app_msc">
	<select id="${view.id}"
			name="${view.name}"
			class="form-control select2 ${view.klass}"
			style="${view.style}"
			lang="${view.lang}"
			onclick="${view.onclick}"
			ondblclick="${view.ondblclick}"
			onmousedown="${view.onmousedown}"
			onmouseup="${view.onmouseup}"
			onmouseover="${view.onmouseover}"
			onmousemove="${view.onmousemove}"
			onmouseout="${view.onmouseout}"
			onkeypress="${view.onkeypress}"
			onkeydown="${view.onkeydown}"
			onkeyup="${view.onkeyup}"
			disabled="${view.disabled}"
			tabindex="${view.tabindex}"
			onfocus="${view.onfocus}"
			onblur="${view.onblur}"
			onchange="${view.onchange}"
			multiple="${view.multiple}"
			size="${view.size}"
			tal:define="placeholder view.placeholder | nothing;
						ajax_url view.ajax_url | nothing;"
			data-allow-clear="${'true' if placeholder and not view.required else None}"
			data-placeholder="${placeholder}"
			data-ajax--url="${ajax_url}"
			data-ajax--params='${view.ajax_params | nothing}'
			data-minimum-input-length="${'2' if ajax_url else None}"
			data-ams-data='${tales:object_data(view)}'>
		<tal:if condition="placeholder">
			<option i18n:translate="">${placeholder}</option>
		</tal:if>
		<tal:loop repeat="item view.items">
			<option id="${item['id']}"
					value="${item['value']}"
					selected="${'selected' if item['selected'] else None}">${item['content']}</option>
		</tal:loop>
	</select>
	<div tal:define="principal_ids [item['value'] for item in view.items if item['selected']]"
		 tal:condition="principal_ids"
		 class="btn btn-sm btn-secondary ml-1"
		 data-ams-click-handler="MyAMS.msc.catalog.getPrincipalID">
		<i class="fas fa-fw fa-search hint"
		   title="Edit user profile" i18n:attributes="title"></i>
	</div>
	<div class="btn btn-sm btn-primary ml-2"
		 data-ams-url="${tales:absolute_url(context, 'add-user-profile.html')}"
		 data-toggle="modal">
		<i class="fas fa-fw fa-plus hint"
		   title="Create new user profile" i18n:attributes="title"></i>
	</div>
	<input name="${view.name}-empty-marker" type="hidden" value="1"/>
</div>