{
  "name": "universal-learning",
  "root": "packages/universal_learning", 
  "projectType": "library",
  "sourceRoot": "packages/universal_learning/universal_learning",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "python -m pip install build",
          "python -m build"
        ],
        "cwd": "packages/universal_learning"
      }
    },
    "test": {
      "executor": "nx:run-commands", 
      "options": {
        "commands": [
          "python -m pytest tests/ -v"
        ],
        "cwd": "packages/universal_learning"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "python -m ruff check .",
          "python -m black --check ."
        ],
        "cwd": "packages/universal_learning"
      }
    }
  },
  "tags": ["type:package", "scope:research", "domain:agi"]
}