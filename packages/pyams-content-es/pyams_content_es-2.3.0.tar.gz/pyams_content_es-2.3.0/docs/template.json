{
  "index_patterns": [
    "pyams_*"
  ],
  "template": {
    "settings": {
      "index": {
        "number_of_replicas": 1,
        "number_of_shards": 6,
        "analysis": {
          "filter": {
            "elision_fr": {
              "type": "elision",
              "articles": [
                "l",
                "m",
                "t",
                "qu",
                "n",
                "s",
                "j",
                "d",
                "c",
                "jusqu",
                "quoiqu",
                "lorsqu",
                "puisqu"
              ]
            },
            "stemmer_fr": {
              "type": "stemmer",
              "language": "light_french"
            },
            "snowball_fr": {
              "type": "snowball",
              "language": "French"
            },
            "stop_fr": {
              "ignore_case": "true",
              "type": "stop",
              "stopwords": "_french_"
            }
          },
          "analyzer": {
            "french_search": {
              "filter": [
                "stop_fr",
                "asciifolding",
                "lowercase",
                "snowball_fr",
                "elision_fr",
                "stemmer_fr"
              ],
              "type": "custom",
              "tokenizer": "standard"
            },
            "french": {
              "filter": [
                "stop_fr",
                "asciifolding",
                "lowercase",
                "snowball_fr",
                "elision_fr",
                "stemmer_fr"
              ],
              "type": "custom",
              "tokenizer": "standard"
            },
            "default": {
              "type": "french"
            }
          }
        }
      }
    },
    "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
