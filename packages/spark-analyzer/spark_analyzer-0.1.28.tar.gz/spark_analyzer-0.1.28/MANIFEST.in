# Include license and readme
include LICENSE
include README.md
include pyproject.toml
include requirements.txt

# Include package data
recursive-include spark_analyzer/resources *.json
recursive-include spark_analyzer/lib/configs *.ini
recursive-include spark_analyzer/lib/configs *.txt
recursive-include spark_analyzer/static/images *.png

# Exclude staging and internal files
exclude setup_staging.sh
exclude setup_non_interactive.sh
exclude STAGING.md
exclude create_zip_distribution.py
exclude spark_analyzer/lib/configs/config.staging.ini
exclude spark_analyzer/lib/configs/config.template.ini
exclude spark_analyzer/lib/configs/raw_cookies.staging.txt

# Include local analysis (required for report mode)
include spark_analyzer/local_analysis/*.py
include spark_analyzer/local_analysis/__init__.py

# Exclude development and build files
exclude .git*
exclude .gitignore
exclude .DS_Store
exclude __pycache__
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude .Python
exclude build/
exclude dist/
exclude *.egg-info/
exclude .eggs/
exclude .tox/
exclude .coverage
exclude .pytest_cache/
exclude .venv/
exclude venv/

# Exclude any backup files
exclude *.bak
exclude *.backup
exclude *~
exclude *.swp 