# Core documentation and license
include README.md
include LICENSE

# Include everything in docksuitex
recursive-include docksuitex *

# Exclude unwanted dirs inside docksuitex
recursive-exclude docksuitex/__pycache__ *
recursive-exclude docksuitex/bin *
recursive-exclude docksuitex/temp *

# Include examples if needed
recursive-include examples *

# Exclude Python cache and temporary files
global-exclude __pycache__/*

# Exclude Git and version control junk
exclude .gitignore
exclude .gitattributes
recursive-exclude .git *
recursive-exclude .github *

# Exclude build artifacts
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *

# Exclude tests and docs
recursive-exclude tests *
recursive-exclude notebooks *
recursive-exclude docs *
